<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/image_employee_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/image_employee_avatar"
        app:layout_constraintBottom_toBottomOf="@id/image_employee_avatar"
        app:layout_constraintStart_toEndOf="@id/image_employee_avatar"
        android:id="@+id/text_employee_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ma1"/>

    <TextView
        android:id="@+id/text_employee_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_employee_code"
        app:layout_constraintTop_toTopOf="@id/image_employee_avatar"
        app:layout_constraintBottom_toBottomOf="@id/image_employee_avatar"
        android:text=" - "/>

    <TextView
        android:id="@+id/text_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_employee_code"
        app:layout_constraintBottom_toBottomOf="@id/text_employee_code"
        app:layout_constraintStart_toEndOf="@id/text_employee_dash"
        tools:text="Quach Tinh"/>

    <CheckBox
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/checkbox"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_employee_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>